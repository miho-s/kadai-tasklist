<% if users.any? %>
    <% users.each do |user| %>
        <img src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
    <% end %>
  <%= paginate users %>
<% end %>